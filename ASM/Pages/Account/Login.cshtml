@page
@model ASM.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h4>Use a Network account to log in.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-3"> <label asp-for="Credential.UserName" class="form-label"></label> </div>
                    <div class="col-5">
                        <input asp-for="Credential.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Credential.UserName" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="col-3"><label asp-for="Credential.Password" class="form-label"></label></div>
                    <div class="col-5">
                        <input asp-for="Credential.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Credential.Password" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-3"> </div>
                    <div class="checkbox col-5">
                        <label asp-for="Credential.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Credential.RememberMe" />
                            @Html.DisplayNameFor(m => m.Credential.RememberMe)
                        </label>
                    </div>
                </div>

                <div class="row">
                     <div class="col-3"> </div>
                    <div class="col-5">
                        <button id="login-submit" type="submit" class=" w-75 btn btn-lg btn-primary">Log in</button>
                    </div>

                </div>


            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
