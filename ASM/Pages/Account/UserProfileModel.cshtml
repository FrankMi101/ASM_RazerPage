@page
@model ASM.Pages.Account.UserProfileModelModel
@{
}

<form id="account" method="post">
    <h4>Use a Network account to log in.</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
     <div class="row">
        <div class="col-3"> <label asp-for="UserProfile.Email" class="form-label"></label> </div>
        <div class="col-5">
            <input asp-for="UserProfile.Email" class="form-control" readonly   aria-required="true" />
             
        </div>

    </div>
    <div class="row">


        <div class="col-3"> <label asp-for="UserProfile.Department" class="form-label"></label> </div>
        <div class="col-5">
            <input asp-for="UserProfile.Department" class="form-control"   aria-required="true" />
             
        </div>

    </div>

    <div class="row">
        <div class="col-3"><label asp-for="UserProfile.Position" class="form-label"></label></div>
        <div class="col-5">
            <input asp-for="UserProfile.Position" class="form-control"   aria-required="true" />
            
        </div>

    </div>
    <div class="form-group row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value = "Save" />
        </div>
        <div class="col">

        </div>
    </div>
     
</form>
@if (string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.SuccessMessage
    </div>
}

