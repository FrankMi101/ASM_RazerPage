@page
@model ASM.Pages.AppUser.Staffs.EditModel

@{
    ViewData["Title"] = "App Edit Page";
}
 

<form method="post">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Edit @Model.Employee.LastName  </h2>
            <input hidden asp-for="Employee.Id" />
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"> </div>
        <div class="mb-3 col-3">
            <label asp-for="Employee.UserID"></label>
            <input asp-for="Employee.UserID" class="form-control"  readonly/>
            <span asp-validation-for="Employee.UserID" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label asp-for="Employee.FirstName"></label>
            <input asp-for="Employee.FirstName" class="form-control" readonly />
            <span asp-validation-for="Employee.FirstName" class="text-danger"> </span>
        </div>
        <div class="mb-3 col-3">
            <label asp-for="Employee.LastName"></label>
            <input asp-for="Employee.LastName" class="form-control" />
            <span asp-validation-for="Employee.LastName"> </span>
        </div>
        <div class="mb-3 col-3">
            <label asp-for="Employee.UnitID"></label> 
            
              <select class="form-select" asp-for="Employee.UnitID" asp-items="Model.SchoolList">
                    <option disabled selected> -- Select School -- </option>
                </select>
                <span asp-validation-for="Employee.UnitID" class="text-danger"></span>

        </div>
        <div class="mb-3 col-3" >
         <label asp-for="Employee.Position"></label> 
             <input asp-for="Employee.Position" class="form-control" />
            <span asp-validation-for="Employee.Position"> </span>
        </div>
         <div class="mb-3 col-3">
         <label asp-for="Employee.Email"></label> 
            <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
        </div>
          

        <div class="row pb-2">
  
            <button type="submit" class="btn btn-primary" style="width:150px;"> Update </button>

       
            <a asp-page="Index" > Back to List </a>

        </div> 
      
    </div>

</form>
