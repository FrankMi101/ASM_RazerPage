@page
@model ASM.Pages.Admin.AppsModel.IndexModel
 
@{
    ViewData["Title"] = "Index";
      var appId = Request.Query["appId"];
}

 
 <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Apps Model List of @appId  New test </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" asp-route-appId="@appId" class="btn btn-primary">      
                <i class="bi bi-plus-square"></i>
                Add New App Model
            </a>
        </div>
    </div>


<table  class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].AppID)              
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].ModelID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].TypeCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].DeveloperId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].Owners)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Models[0].Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Models)
        {
            <tr>
                <td>
                    @item.AppID
                </td>
                <td>
                    @item.ModelID
                </td>
                <td>
                    @item.ModelName
                </td>
                <td>
                     <select class="w-100" asp-for="@item.TypeCode" asp-items="@(ViewData["GrantTypes"] as IEnumerable<SelectListItem>)">
                    </select>

                </td>
                <td>
                    <select   asp-for="@item.DeveloperId" asp-items="@(ViewData["Developers"] as IEnumerable<SelectListItem>)">
                    </select>
                </td>
                <td>
                    @item.Owners
                </td>
                <td>
                    @item.StartDate.ToString("yyyy-MM-dd") 
                </td>
                <td>
                    @item.EndDate.ToString("yyyy-MM-dd") 
                </td>
                <td style="width:25%">
                    @item.Comments
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="../AppsOperate/Index">Back to Apps List</a>
</div>
