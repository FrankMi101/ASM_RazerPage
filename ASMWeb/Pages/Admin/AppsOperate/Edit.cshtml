@page
@model ASMWeb.Pages.Admin.AppsOperate.EditModel

@{
    ViewData["Title"] = "App Edit Page";
}
 

<form method="post">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3"> Edit @Model.App.AppName Application </h2>
            <input hidden asp-for="App.Id" />
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"> </div>
        <div class="mb-3 col-3">
            <label asp-for="App.AppID"></label>
            <input asp-for="App.AppID" class="form-control"  readonly/>
            <span asp-validation-for="App.AppID" class="text-danger"> </span>
        </div>
        <div class="mb-3">
            <label asp-for="App.AppName"></label>
            <input asp-for="App.AppName" class="form-control" />
            <span asp-validation-for="App.AppName" class="text-danger"> </span>
        </div>
        <div class="mb-3 col-3">
            <label asp-for="App.StartDate"></label>
            <input asp-for="App.StartDate" class="form-control" />
            <span asp-validation-for="App.StartDate"> </span>
        </div>
        <div class="mb-3 col-3">
            <label asp-for="App.DeveloperId"></label> 
            
              <select class="form-select" asp-for="App.DeveloperId" asp-items="Model.DeveloperList">
                    <option disabled selected> -- Select Developer -- </option>
                </select>
                <span asp-validation-for="App.DeveloperId" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="App.AppUrl"></label>
            <input asp-for="App.AppUrl" class="form-control" />
        </div>
        <div class="row pb-2">
  
            <button type="submit" class="btn btn-primary" style="width:150px;"> Update </button>

       
            <a asp-page="Index" > Back to List </a>

        </div> 
      
    </div>

</form>
